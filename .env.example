# === GitHub Configuration ===
GITHUB_REPO_URL=https://github.com/your-username/your-repo.git
GITHUB_TOKEN=ghp_your_personal_access_token
GITHUB_BRANCH=main

# === OAuth 2.1 Configuration ===
# Client credentials for Claude custom connector
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
# The public URL where this server is accessible (used as JWT issuer)
OAUTH_ISSUER_URL=https://your-domain.example.com
# Secret key for signing JWTs (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=change-me-to-a-random-secret

# === Server Configuration ===
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# === Storage Paths (Docker volumes) ===
REPO_DIR=/data/repo
INDEX_DIR=/data/index

# === Sync Timing ===
# How often to pull from GitHub (seconds)
PULL_INTERVAL=300
# How long to wait after last write before pushing (seconds)
PUSH_DEBOUNCE=120
